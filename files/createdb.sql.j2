CREATE DATABASE IF NOT EXISTS {{ mariadb_database }};
CREATE USER '{{ mariadb_username }}'@'%' IDENTIFIED BY '{{ mariadb_password }}';
GRANT ALL ON {{ mariadb_database }}.* TO '{{ mariadb_username }}'@'%';
GRANT ALL ON {{ mariadb_database }}.* TO '{{ mariadb_username }}'@'localhost';
GRANT ALL ON {{ mariadb_database }}.* TO '{{ mariadb_username }}'@'gateway';
GRANT ALL ON {{ mariadb_database }}.* TO '{{ mariadb_username }}'@'127.0.0.1';
FLUSH PRIVILEGES;
